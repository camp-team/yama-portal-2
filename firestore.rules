rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // match /{document=**} {
    //   allow read, create, write, update, delete: if true;
    // }
    match /posts/{id} {
      allow read: if resource.data.public == true || (request.auth != null && request.auth.uid == resource.data.userId);
      allow create: if request.auth.uid != null;
      allow update: if request.auth.uid == resource.data.userId;
      allow delete: if request.auth.uid == resource.data.userId;
    }
    match /posts/{id}/likedUserIds/{userId} {
    	allow read: if true;
      allow write: if request.auth.uid != null;
    }
    match /customers/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == resource.data.userId;
    }
    match /users/{uid} {
      allow read: if true;
      allow create: if true;
      allow update: if request.auth.uid == resource.data.uid;
      allow delete: if request.auth.uid == resource.data.uid;
    }
    match /users/{uid}/likedPosts/{postId} {
      allow read: if true;
      allow write: if request.auth.uid == uid;
    }
  }
}
