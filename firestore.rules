rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth.uid != null;
      allow update, delete: if request.auth.uid == resource.data.userId
    }
    match /users/{userid} {
      allow read: if true;
      allow create: if request.auth.uid == null;
      allow update, delete: if request.auth.uid == resource.data.userId
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
}
